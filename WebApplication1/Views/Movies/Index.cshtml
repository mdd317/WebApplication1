@model IEnumerable<WebApplication1.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@Html.ActionLink("Save API Data", "SaveDataFromAPI", "Movies")

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.original_language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Popularity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.release_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.video)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vote_average)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vote_count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cinema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie_Producers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studios)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.original_language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Popularity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.release_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.video)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.vote_average)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.vote_count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cinema.Name)
                </td>
                <td>
                    @if (item.Movie_Producers != null)
                    {
                        foreach (var mp in item.Movie_Producers)
                        {
                            @mp.Producer.FullName
                            <br />
                        }
                    }
                </td>
                <td>
                    @foreach (var studio in item.Studios)
                    {
                        if (studio != null)
                        {
                            <p>@studio.Id</p>
                        }
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
